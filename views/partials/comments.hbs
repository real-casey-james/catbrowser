<h3>Cat Chat</h3>

<form class="form" action="./{{name}}/comment" method="post">
    <label for="name" class="form-item">
        Name:
        <input type="text" name="name">
    </label>
    <label for="comment" class="form-item">
        Comment:
        <input type="text" name="comment">
    </label>
<input type="submit" value="Submit">
</form>


<div class="commentSection">
    {{#each comments}}
    <div class="comment">
    <p>Name: {{name}}</p>
    <p>Comment: {{comment}}</p>
    <form method="POST" action="{{../name}}/comment/{{@key}}?_method=DELETE"><button type="submit">Delete</button></form>
    </div>
    {{/each}}
</div>